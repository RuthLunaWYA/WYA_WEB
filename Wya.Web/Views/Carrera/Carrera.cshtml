@{
    ViewData["Title"] = "Carrera";
}

<section class="hero d-flex align-items-center section-animate" style="background-image: url('/images/banner-carrera.webp');">
    <div class="container text-start">
        <h1 class="hero-title">Trabaja con nosotros en WYA</h1>
        <p class="hero-subtitle">Únete a Nuestro Equipo en WYA SOLUCIONES INTEGRALES </p>
        <div class="scroll-down">
            <a href="#next-section" class="scroll-arrow">
                <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="var(--color-wya-1)" stroke-width="2">
                    <path d="M12 5v14m7-7-7 7-7-7" />
                </svg>
            </a>
        </div>
    </div>
</section>

<div class="section-group">
    <section class="section-animate py-5">
        <div class="container">
            <h1 class="title text-center mb-4">CANALES</h1>
            <h3 class="sub-title text-center mb-4">
                Los canales oficiales de reclutamiento se encuentran en las siguientes páginas web
            </h3>
            <div class="d-flex flex-wrap justify-content-center">
                <div class="card card-4">
                    <img src="/images/logo-linkedin.svg" alt="Linkedin" loading="lazy">
                </div>
                <div class="card card-4">
                    <img src="/images/logo-bomberan.svg" alt="Boomberano" loading="lazy">
                </div>
                <div class="card card-4">
                    <img src="/images/logo-computrabajo.svg" alt="CompuTrabajo" loading="lazy">
                </div>
            </div>
        </div>
    </section>
    <section class="section-animate py-5">
        <h1 class="title text-center mb-4">OPORTUNIDADES ACTUALES</h1>
        <div class="container card-3 p-5" style="background-image: url('/images/nuestrosvalores.webp');">
        </div>
        <div class="p-5" style="margin-top:-200px;">
            <div class="wrapper-carrera">
                <div class="container-carrera">
                    <input type="radio" name="slide-carrera" id="c1" checked>
                    <label for="c1" class="card-carrera">
                        <div class="row-carrera">
                            <div class="icon-carrera"></div>
                            <div class="description-carrera">
                                <h4>Desarrollador Web</h4>
                                <p>Únete a nuestro equipo de desarrollo para crear soluciones innovadoras.</p>
                            </div>
                            <div class="vertical-title">
                                <h4>Desarrollador Web</h4>
                            </div>
                        </div>
                    </label>
                    <input type="radio" name="slide-carrera" id="c2">
                    <label for="c2" class="card-carrera">
                        <div class="row-carrera">
                            <div class="icon-carrera"></div>
                            <div class="description-carrera">
                                <h4>Analista de Datos</h4>
                                <p>Analiza datos para impulsar decisiones estratégicas.</p>
                            </div>
                            <div class="vertical-title">
                                <h4>Analista de Datos</h4>
                            </div>
                        </div>
                    </label>
                    <input type="radio" name="slide-carrera" id="c3">
                    <label for="c3" class="card-carrera">
                        <div class="row-carrera">
                            <div class="icon-carrera"></div>
                            <div class="description-carrera">
                                <h4>Especialista en Marketing</h4>
                                <p>Crea campañas impactantes para nuestra marca.</p>
                            </div>
                            <div class="vertical-title">
                                <h4>Especialista en Marketing</h4>
                            </div>
                        </div>
                    </label>
                    <input type="radio" name="slide-carrera" id="c4">
                    <label for="c4" class="card-carrera">
                        <div class="row-carrera">
                            <div class="icon-carrera"></div>
                            <div class="description-carrera">
                                <h4>Ingeniero de Software</h4>
                                <p>Desarrolla software de vanguardia para nuestros clientes.</p>
                            </div>
                            <div class="vertical-title">
                                <h4>Ingeniero de Software</h4>
                            </div>
                        </div>
                    </label>
                </div>
            </div>
        </div>
    </section>

    <section class="section-animate">
        <div class="container p-5" style="background: #EEE4F2; border-radius: 20px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
            <h2 class="title text-center mb-5" style="color: #7B2CBF; font-weight: bold;">
                ¿POR QUÉ WYA SOLUCIONES <br> INTEGRALES?
            </h2>

            <div class="row align-items-center">
                <!-- Imagen -->
                <div class="col-md-6 mb-4 mb-md-0 d-none d-md-block">
                    <img src="https://picsum.photos/500/300?random=5" alt="Equipo de trabajo" class="img-fluid rounded-4 shadow-sm" style="display: block; margin: 0 auto;" loading="lazy">
                </div>

                <!-- Texto -->
                <div class="col-md-6">
                    <!-- Item 1 -->
                    <div class="d-flex mb-4 position-relative">
                        <div class="circle-num">01</div>
                        <div class="ms-3">
                            <h5 class="fw-bold" style="color:#7B2CBF;">Crecer Profesionalmente</h5>
                            <p>Fomentamos el desarrollo continuo y ofrecemos programas de formación para que alcances tu máximo potencial.</p>
                        </div>
                    </div>

                    <!-- Item 2 -->
                    <div class="d-flex mb-4 position-relative">
                        <div class="circle-num">02</div>
                        <div class="ms-3">
                            <h5 class="fw-bold" style="color:#7B2CBF;">Impactar Empresas</h5>
                            <p>Trabaja en proyectos significativos que tienen un impacto real en la eficiencia y éxito de nuestros clientes.</p>
                        </div>
                    </div>

                    <!-- Item 3 -->
                    <div class="d-flex position-relative">
                        <div class="circle-num">03</div>
                        <div class="ms-3">
                            <h5 class="fw-bold" style="color:#7B2CBF;">Cultura de Colaboración</h5>
                            <p>Forma parte de un equipo diverso y talentoso que valora la colaboración y la innovación.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
